<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PatientRegistration" >

    <TextView
        android:id="@+id/tvPatientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient name"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etPatientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPatientName"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
        android:maxLength="25"
        android:hint="Name (max 25 characters)"
        android:singleLine="true"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvPatientAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPatientName"
        android:layout_marginTop="10dp"
        android:text="Patient age"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etPatientAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPatientAge"
        android:digits="01234567890"
        android:hint="Age (max 99)"
        android:inputType="number"
        android:maxLength="2"
        android:singleLine="true"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/tvPatientMRNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPatientAge"
        android:layout_marginTop="10dp"
        android:text="MR Number"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etPatientMRNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPatientMRNumber"
        android:digits="01234567890-"
        android:hint="MR Number"
        android:inputType="number"
        android:maxLength="14"
        android:singleLine="true"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPatientMRNumber"
        android:layout_marginTop="20dp"
        android:text="Continue"
        android:textSize="20dp" />

</RelativeLayout>